{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {
    "Automation Account Name": {
      "defaultValue": "",
      "type": "String"
    },
    "Policy Alert Email From Address": {
      "defaultValue": "xxx@microsoft.com",
      "type": "String"
    },
    "Policy Alert Email To Address": {
      "defaultValue": "xxx@microsoft.com",
      "type": "String"
    },
    "Email SMTP Server Name": {
      "defaultValue": "",
      "type": "String"
    },
    "Email Server User Name": {
      "defaultValue": "",
      "type": "String"
    },
    "Email Server Password": {
      "defaultValue": "",
      "type": "securestring"
    },
    "SubscriptionID": {
      "defaultValue": "",
      "type": "String"
    },
    "Subscription Name": {
      "defaultValue": "",
      "type": "String"
    }
  },
  "variables": {
    "scriptUri1": "https://raw.githubusercontent.com/pradeepvengala/LimitPricingTiersThruAzurePolicy/master/EnableAzurePolicy.ps1",
    "scriptUri2": "https://raw.githubusercontent.com/pradeepvengala/LimitPricingTiersThruAzurePolicy/master/DisableAzurePolicy.ps1",
    "scriptUri3": "https://raw.githubusercontent.com/pradeepvengala/LimitPricingTiersThruAzurePolicy/master/DeployAzurePolicy.ps1",
    "RunbookDisableAzurePolicy": "DisableAzurePolicy",
    "RunbookEnableAzurePolicy": "EnableAzurePolicy",
    "RunbookDeployAzurePolicy": "DeployAzurePolicy",
    "PolicyName": "LimitPricingTiers"

  },
    "resources": [
      {
        "type": "Microsoft.Automation/automationAccounts",
        "name": "[parameters('Automation Account Name')]",
        "apiVersion": "2015-10-31",
        "location": "southcentralus",
        "properties": {
          "sku": { "name": "Free" }
        },
        "resources": [
          {
            "type": "runbooks",
            "name": "[variables('RunbookDisableAzurePolicy')]",
            "apiVersion": "2015-10-31",
            "location": "southcentralus",
            "properties": {
              "runbookType": "PowerShell",
              "logVerbose": false,
              "logProgress": false,
              "publishContentLink": {
                "uri": "[variables('scriptUri2')]",
                "version": "1.0.0.0"
              }
            },
            "dependsOn": [
              "[resourceId('Microsoft.Automation/automationAccounts', parameters('Automation Account Name'))]"
            ]
          },
          {
            "type": "runbooks",
            "name": "[variables('RunbookEnableAzurePolicy')]",
            "apiVersion": "2015-10-31",
            "location": "southcentralus",
            "properties": {
              "runbookType": "PowerShell",
              "logVerbose": false,
              "logProgress": false,
              "publishContentLink": {
                "uri": "[variables('scriptUri1')]",
                "version": "1.0.0.0"
              }

            },
            "dependsOn": [
              "[resourceId('Microsoft.Automation/automationAccounts', parameters('Automation Account Name'))]"
            ]
          },
          {
            "type": "runbooks",
            "name": "[variables('RunbookDeployAzurePolicy')]",
            "apiVersion": "2015-10-31",
            "location": "southcentralus",
            "properties": {
              "runbookType": "PowerShell",
              "logVerbose": false,
              "logProgress": false,
              "publishContentLink": {
                "uri": "[variables('scriptUri3')]",
                "version": "1.0.0.0"
              }

            },
            "dependsOn": [
              "[resourceId('Microsoft.Automation/automationAccounts', parameters('Automation Account Name'))]"
            ]
          },
          {
            "type": "variables",
            "name": "From",
            "apiVersion": "2015-10-31",
            "properties": {
              "isEncrypted": false,
              "value": "[concat('\"',parameters('Policy Alert Email From Address'),'\"')]",
              "description": "From"
            },
            "dependsOn": [
              "[resourceId('Microsoft.Automation/automationAccounts', parameters('Automation Account Name'))]"
            ]
          },
          {
            "type": "variables",
            "name": "PolicyName",
            "apiVersion": "2015-10-31",
            "properties": {
              "isEncrypted": false,
              "value": "[concat('\"','LimitPricingTiers','\"')]",
              "description": "PolicyName"
            },
            "dependsOn": [
              "[resourceId('Microsoft.Automation/automationAccounts', parameters('Automation Account Name'))]"
            ]
          },
          {
            "type": "variables",
            "name": "SubscriptionId",
            "apiVersion": "2015-10-31",
            "properties": {
              "isEncrypted": false,
              "value": "[concat('\"',parameters('SubscriptionID'),'\"')]",
              "description": "SubscriptionId"
            },
            "dependsOn": [
              "[resourceId('Microsoft.Automation/automationAccounts', parameters('Automation Account Name'))]"
            ]
          },
          {
            "type": "variables",
            "name": "SubscriptionName",
            "apiVersion": "2015-10-31",
            "properties": {
              "isEncrypted": false,
              "value": "[concat('\"',parameters('Subscription Name'),'\"')]",
              "description": "Subscription Name"
            },
            "dependsOn": [
              "[resourceId('Microsoft.Automation/automationAccounts', parameters('Automation Account Name'))]"
            ]
          },
          {
            "type": "variables",
            "name": "To",
            "apiVersion": "2015-10-31",
            "properties": {
              "isEncrypted": false,
              "value": "[concat('\"',parameters('Policy Alert Email To Address'),'\"')]",
              "description": "To"
            },
            "dependsOn": [
              "[resourceId('Microsoft.Automation/automationAccounts', parameters('Automation Account Name'))]"
            ]
          },
          {
            "type": "variables",
            "name": "EmailSMTPServerName",
            "apiVersion": "2015-10-31",
            "properties": {
              "isEncrypted": false,
              "value": "[concat('\"',parameters('Email SMTP Server Name'),'\"')]",
              "description": "Email SMTP Server Name"
            },
            "dependsOn": [
              "[resourceId('Microsoft.Automation/automationAccounts', parameters('Automation Account Name'))]"
            ]
          },
          {
            "type": "variables",
            "name": "EmailServerUserName",
            "apiVersion": "2015-10-31",
            "properties": {
              "isEncrypted": false,
              "value": "[concat('\"',parameters('Email Server User Name'),'\"')]",
              "description": "Email Server User Name"
            },
            "dependsOn": [
              "[resourceId('Microsoft.Automation/automationAccounts', parameters('Automation Account Name'))]"
            ]
          },
          {
            "type": "variables",
            "name": "EmailServerPassword",
            "apiVersion": "2015-10-31",
            "properties": {
              "isEncrypted": true,
              "value": "[concat('\"',parameters('Email Server Password'),'\"')]",
              "description": "Email Server Password"
            },
            "dependsOn": [
              "[resourceId('Microsoft.Automation/automationAccounts', parameters('Automation Account Name'))]"
            ]
          }
        ]

          }
        ]
      }